<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coisos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/gray_300</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="android:editTextColor">@color/gray_300</item>
        <item name="android:statusBarColor">#3a00a0</item>
    </style>

    <style name="Theme.Coisos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Coisos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Coisos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>