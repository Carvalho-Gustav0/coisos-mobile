<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Coisos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pink_900</item>
        <item name="colorSecondary">@color/purple_900</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/gray_700</item>
        <item name="editTextColor">@color/gray_900</item>
        <item name="android:editTextColor">@color/gray_900</item>

        <item name="editTextStyle">@style/EditTextTheme</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_texts_user</item>
    </style>

    <style name="Theme.Coisos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Coisos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Coisos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

</resources>